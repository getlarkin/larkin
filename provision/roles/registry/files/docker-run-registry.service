[Unit]
Description=DockerRunRegistry
After=network.target remote-fs.target

[Service]
WorkingDirectory=/opt/larkin/current
ExecStart=/usr/local/bin/npm run start:registry
ExecStop=/bin/true
Restart=always
Type=simple
User=ec2-user
Group=ec2-user
StartLimitBurst=50

[Install]
WantedBy=multi-user.target
